generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")  
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId  
  email    String   @unique
  name     String
  password String 
  resumes  Resume[]  
}


model Resume {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId  
  userId     String   @db.ObjectId 
  user       User     @relation(fields: [userId], references: [id])  
  personapersonalInfo  Json 
  education  Json     
  experience Json     
  skills     String[]  
}
