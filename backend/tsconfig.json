{
  "compilerOptions": {
    "typeRoots": ["./@types", "./node_modules/@types"],
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*", "types.d.ts", "index.d.ts"],  
  "exclude": ["node_modules", "dist"]
}
